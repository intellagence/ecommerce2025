{% extends 'base.html.twig' %}

{% block h1 %}Gestion des catégories{% endblock %}

{% block body %}


    <a class="btn btn-dark" href="{{ path('app_category_new') }}">Ajouter une catégorie</a>

    <table class="table table-striped table-hover table-bordered text-center mt-3">

        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
